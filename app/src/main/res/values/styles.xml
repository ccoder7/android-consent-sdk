<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="cf_textColor">@android:color/black</item>
        <item name="cf_titleTextColor">@android:color/black</item>
        <item name="cf_confirmButtonTextColor">@android:color/white</item>
        <item name="cf_backgroundColor">@android:color/darker_gray</item>
        <item name="cf_dividerColor">#D3D3D3</item>
    </style>

    <style name="ActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="cf_textColor">@android:color/black</item>
        <item name="cf_titleTextColor">@android:color/black</item>
        <item name="cf_confirmButtonTextColor">@android:color/white</item>
        <item name="cf_backgroundColor">@android:color/darker_gray</item>
        <item name="cf_dividerColor">#D3D3D3</item>
    </style>

</resources>
